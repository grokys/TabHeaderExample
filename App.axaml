<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:TabHeaderExample"
             x:Class="TabHeaderExample.App">
    <Application.Styles>
        <FluentTheme Mode="Light"/>
    </Application.Styles>
	<Application.DataTemplates>
		<DataTemplate DataType="local:TabPageHeaderModel">
			<StackPanel Orientation="Horizontal">
				<Image Width="32" Source="{Binding Image}"/>
				<TextBlock Text="{Binding Title}"/>
			</StackPanel>
		</DataTemplate>
	</Application.DataTemplates>
</Application>
